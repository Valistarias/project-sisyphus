{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
      "standard-with-typescript",
      "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "no-console": 2,
      "semi": ["error", "always"],
      "@typescript-eslint/semi": ["error", "always"],
      "@typescript-eslint/strict-boolean-expressions": "warn"
    }
}
